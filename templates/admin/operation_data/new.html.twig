{% extends 'base_' ~ ga_theme ~ '.html.twig' %}

{% block title %}New OperationData{% endblock %}

{% block body %}
    <h1>Gestion du financement de l'opération</h1>

    {# {{ include('admin/operation_data/_form.html.twig') }} #}
    
    
    <section id="data">
        <article class="operation" id="operation">
            {% if operation_datum.operation is not empty %}
                <header>{{ operation_datum.operation.libelle }}</header>
            {% endif %}
            <p id="reference">Département XXX - Direction XXX</p>
            <section class="description">
                <header>description de l’opération d’investissement</header>
                {% if operation_datum.operation is not empty %}
                    <p>{{ operation_datum.operation.description }}</p>
                {% endif %}
            </section>
            <section class="estimation">
                <header>estimation du coût de l’opération</header>
                {# <p>{% include "admin/operation/ppi_parCategorie.html.twig" with {'items': ppi} %}</p> #}
            </section>
            <section class="notifications">
                <header>remarques</header>
                {% if operation_datum.operation is not empty %}
                    <p>{{ operation_datum.operation.commentaire }}</p>
                {% endif %}
            </section>
        </article>
    </section>
    <section id="formOperationData">{% include 'admin/operation_data/_form.html.twig' %}</section>
    {% if operation_datum.operation is not empty %}
        <section id="dataOperationData">{% include "admin/operation_data/block.html.twig" with {items: operation_datum.operation.operationData} %}</section>
    {% endif %}


    <a href="{{ path('admin_operation_data_index') }}">back to list</a>
{% endblock %}
