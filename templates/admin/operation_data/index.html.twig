{% extends 'base.html.twig' %}

{% block title %}OperationData index{% endblock %}

{% block body %}
    <h1>OperationData index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Annee</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for operation_datum in operation_datas %}
            <tr>
                <td>{{ operation_datum.id }}</td>
                <td>{{ operation_datum.montant }}</td>
                <td>{{ operation_datum.annee }}</td>
                <td>{{ operation_datum.type ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('admin_operation_data_show', {'id': operation_datum.id}) }}">show</a>
                    <a href="{{ path('admin_operation_data_edit', {'id': operation_datum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_operation_data_new') }}">Create new</a>
{% endblock %}
