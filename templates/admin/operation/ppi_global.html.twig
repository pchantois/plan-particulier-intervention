<table class="ppi">
    <thead>
        <tr>
            <td rowspan="3">libelle</td>
            <td colspan="3" data-scroll-span="{{ (items|first|keys|last - items|first|keys|first +1)*3 }}">Data</td>
            <td rowspan="3"></td>
        </tr>
        <tr>
            {% for annee in items|first|keys %}
            <td colspan="3">{{annee}}</td>
            {% endfor %}
        </tr>
        <tr>
            {% for annee in items|first|keys %}
            <td>depense</th>
            <td>recette</td>
            <td>charge nette</td>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
    {% for libelle, item in items %}
        <tr>
            <td><a href="">{{ libelle }}</a></td>
            {% for operation in item %}
            <td>{{operation.depense}}</td>
            <td>{{operation.recette}}</td>
            <td>{{operation.depense - operation.recette}}</td>
