{% extends 'base_' ~ configs.site.theme ~ '.html.twig' %}

{% block title %}Operation index{% endblock %}

{% block body %}
    <h1>Operation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Commentaire</th>
                <th>Montant</th>
                <th>Annee</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
        {% for operation in operations %}
            <tr>
                <td><a href="{{ path('admin_operation_show', {'id': operation.id}) }}">{{ operation.id }}</a></td>
                <td><a href="{{ path('admin_operation_show', {'id': operation.id}) }}">{{ operation.code }}</a></td>
                <td><a href="{{ path('admin_operation_show', {'id': operation.id}) }}">{{ operation.libelle }}</a></td>
                <td>{{ operation.description }}</td>
                <td>{{ operation.commentaire }}</td>
                <td>{{ operation.montant }}</td>
                <td>{{ operation.annee }}</td>
                <td>{{ operation.type ? 'd√©pense' : 'recette' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include "admin/operation/ppi_global.html.twig" with {'items': ppi} %}
    {% include "admin/operation/ppi_parCategorie.html.twig" with {'items': ppi2} %}
{% endblock %}
